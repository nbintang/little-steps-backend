enum CategoryType {
  PARENT
  CHILD
}

model Category {
  id        String        @id @default(uuid())
  name      String        @unique
  slug      String        @unique
  type      CategoryType  @default(PARENT)
  createdAt DateTime      @default(now()) @map("created_at")
  updatedAt DateTime      @default(now()) @updatedAt @map("updated_at")
  contents  Content[]
  quizzes   Quiz[]
  forum     ForumThread[]

  @@map("category")
}
